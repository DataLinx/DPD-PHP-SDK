{
    "name": "datalinx/dpd-php-sdk",
    "description": "PHP SDK for DPD Slovenia and Croatia",
    "keywords": [
        "dpd",
        "easyship",
        "api",
        "webservice",
        "php",
        "sdk",
        "slovenia",
        "slovenija",
        "croatia",
        "hrvatska"
    ],
    "homepage": "https://github.com/datalinx/dpd-php-sdk",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DataLinx",
            "email": "info@datalinx.si"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "DataLinx\\DPD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DataLinx\\DPD\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "allejo/php-vcr-sanitizer": "^1.1",
        "datalinx/php-utils": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.14",
        "php-vcr/php-vcr": "^1.5",
        "php-vcr/phpunit-testlistener-vcr": "^3.1",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
        "test": "vendor/bin/phpunit"
    }
}
